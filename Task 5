import random
n = int(input("Введите количество чисел:"))
k = int(input("Введите количество попыток:"))
a = random.randint(1, n)
for i in range(1, k+1):
    b = int(input("Давайте сыграем в игру? Введите свое число:"))
    if b > a:
        print ("Ваше число слишком велико. Попробуйте еще раз.", "Попыток осталось:", k - i)
    elif b<a:
        print ("Ваше число слишком мало. Попробуйте ещё раз.", "Попыток осталось:", k - i)
    else:
        print ("Вы угадали число. Поздравляем, Вас не убили!")
        break
if i == k:
    print ("Попытки закончились!")
